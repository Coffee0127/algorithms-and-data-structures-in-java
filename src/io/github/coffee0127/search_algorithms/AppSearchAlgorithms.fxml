<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<AnchorPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="io.github.coffee0127.search_algorithms.AppSearchAlgorithms">
    <padding>
        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
    </padding>
    <Label layoutX="15.0" layoutY="10.0" text="Set the size of the array"/>
    <TextField fx:id="size" layoutX="15.0" layoutY="30.0" prefWidth="150.0"/>
    <Button layoutX="180.0" layoutY="30.0" mnemonicParsing="false" onAction="#setSize" prefWidth="100.0"
            text="Set Size"/>

    <Label layoutX="15.0" layoutY="60.0" text="Set number for search"/>
    <TextField fx:id="num" layoutX="15.0" layoutY="80.0" prefWidth="150.0"/>
    <Button layoutX="180.0" layoutY="80.0" mnemonicParsing="false" onAction="#linearSearch" prefWidth="100.0"
            text="Linear Search"/>
    <Button layoutX="180.0" layoutY="105.0" mnemonicParsing="false" onAction="#binarySearch" prefWidth="100.0"
            text="Binary Search"/>

    <Label fx:id="array" layoutX="15.0" layoutY="135.0"/>
    <TextArea fx:id="print" layoutX="15.0" layoutY="155.0" prefHeight="100.0" prefWidth="265.0" wrapText="true"/>
</AnchorPane>
